{
  "buildCommand": "npm run build",
  "outputDirectory": "./",
  "installCommand": "npm install",
  "devCommand": "npm run build-css",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/products",
      "destination": "/pages/products.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
